                );
                if (!empty($term_parents[$fa['bundle']])) {
                  $params_parent[$p->tid] = $p_params;
                }
                $p_options = array();
                $p_path = enterprise_rel_path_by_params($p_params, $p_options);

                $vitems->rows[$p->tid]->link = l($p->name, $p_path, $p_options);
                $vitems->rows[$p->tid]->url = url($p_path, $p_options);
              }
              if (!empty($term_parents[$fa['bundle']])) {
                $vitems->rows[$p->tid]->count = 0;
              }
            }

            if (!empty($term_parents[$fa['bundle']]) && !empty($params_parent[$p->tid])) {
              $params = array_merge($params, $params_parent[$p->tid]);
            }
            $path = enterprise_rel_path_by_params($params, $options);
            $vitems->rows[$p->tid]->rows[$row->tid] = (object)array(
              'title' => $row->name,
              'url' => url($path, $options),
              'link' => l($row->name, $path, $options),
              'count' => $row->count,
            );
            // if term is parent and parent arg exists, calculate total via aggregation
            if (!empty($term_parents[$fa['bundle']])) {
              $vitems->rows[$p->tid]->count += $row->count;
            }
            //$vitems->rows[$p->tid]->count += $row->count;
            $vitems->levels = 2;
          }
        }
        else {
          //dsm($row);
          $path = enterprise_rel_path_by_params($params, $options);
          // this is structured this way, because parents show up in the query data
          if (!isset($vitems->rows[$row->tid])) {
            $vitems->rows[$row->tid] = (object)array(
              'title' => $row->name,
              'url' => url($path, $options),
              'link' => l($row->name, $path, $options),
              //'count' => $row->count,
