            $vitems->rows[$row->tid]->title = $row->name;
            $vitems->rows[$row->tid]->url = url($path, $options);
            $vitems->rows[$row->tid]->link = l($row->name, $path, $options);
*/
          }

          if (empty($vitems->rows[$row->tid]->is_parent) || empty($term_parents[$fa['bundle']])) {
            $vitems->rows[$row->tid]->count = $row->count;
          }


        }
        $vitems->count += $row->count;
        $count++;
      }
      $items[] = $vitems;
    }
    else if (!empty($fa['field_name'])) {
//dsm($fa);
      $fi_info = field_info_instance($rv_meta['entity_filter']['type'], $fa['field_name'], $rv_meta['entity_filter']['bundle']);
