name = Enterprise Bootstrap
description = Extended Bootstrap base theme for Open Enterprise Pro.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[header_top]     = 'Header Top'
regions[brand_bar]      = 'Brand Bar'
regions[navigation]     = 'Navigation'
regions[header_bottom]  = 'Header Bottom'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[footer_bottom]  = 'Footer bottom'
regions[footer_sticky]  = 'Sticky footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = less/enterprise_bootstrap.less

;;;;;;;;;;;;;;;;;;;;;
;; LESS
;;;;;;;;;;;;;;;;;;;;;

less[vars][@brand-primary]   = #553D7B
less[vars][@brand-secondary] = #3F2766
less[vars][@brand-accent]    = #745F95
less[vars][@brand-accent-2]  = #271149
less[vars][@brand-accent-3]  = #9B8CB4

;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'js/enterprise_bootstrap.js'

; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''

;;;;;;;;;;;;;;;;;;;;;
;; Theme Settings
;;;;;;;;;;;;;;;;;;;;;

; Global
; --------------
settings[toggle_main_menu] = 0
settings[toggle_secondary_menu] = 0

; Enterprise Bootstrap
; ---------------
settings[fittext] = 0
settings[enterprise_bootstrap_front_container] = 1
settings[enterprise_bootstrap_sidebar_column] = 0
settings[enterprise_bootstrap_block_striping] = 1
settings[enterprise_bootstrap_dropdown] = 1
settings[title_placement] = 1
settings[title_container] = 1
settings[highlighted_placement] = 1
settings[highlighted_container] = 0
settings[header_container] = 0
settings[footer_container] = 1
settings[enterprise_bootstrap_js_options][affix] = 1
settings[enterprise_bootstrap_js_options][alert] = 1
settings[enterprise_bootstrap_js_options][carousel] = 1
settings[enterprise_bootstrap_js_options][collapse] = 1
settings[enterprise_bootstrap_js_options][dropdown] = 1
settings[enterprise_bootstrap_js_options][modal] = 1
settings[enterprise_bootstrap_js_options][tooltip] = 1
settings[enterprise_bootstrap_js_options][popover] = 1
settings[enterprise_bootstrap_js_options][transition] = 1