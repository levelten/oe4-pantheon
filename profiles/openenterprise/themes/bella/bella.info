name = Bella
description = A Bootstrap Sub-theme for Open Enterprise.
core = 7.x
base theme = enterprise_bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[header_top]     = 'Header Top'
regions[brand_bar]      = 'Brand Bar'
regions[navigation]     = 'Navigation'
regions[header_bottom]  = 'Header Bottom'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[footer_bottom]  = 'Footer bottom'
regions[footer_sticky]  = 'Sticky footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

;stylesheets[all][] = css/style.css
stylesheets[all][] = less/style.less
stylesheets[all][] = fonts/bella/css/bella_font.css

;;;;;;;;;;;;;;;;;;;;;
;; LESS
;;;;;;;;;;;;;;;;;;;;;
less[vars][@brand-primary]   = #EA9B3E
less[vars][@brand-secondary] = #F5F5F5
less[vars][@brand-accent]    = #FFFFFF

;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'js/bella.js'

; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''

; Default Bella settings
settings[bootstrap_navbar_position] = 'fixed-top'
settings[enterprise_bootstrap_megamenu] = 0
settings[fittext] = 1
settings[toggle_slogan] = 0
settings[toggle_name] = 0
settings[toggle_logo] = 1
