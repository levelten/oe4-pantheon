name = Atropos for OpenEnterprise
description = A Bootstrap Sub-theme for open enterprise.
core = 7.x
base theme = enterprise_bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

;; css from unify template
stylesheets[all][] = https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800

stylesheets[all][] = assets/plugins/bootstrap/css/bootstrap.min.css
stylesheets[all][] = assets/css/font-awesome.css
stylesheets[all][] = assets/css/animate.css

stylesheets[all][] = assets/css/blog.css

stylesheets[all][] = assets/css/essentials.css

stylesheets[all][] = assets/css/layout.css
stylesheets[all][] = assets/css/layout-responsive.css
stylesheets[all][] = assets/css/color_scheme/orange.css

stylesheets[all][] = assets/css/style.css

;; custom overrides
stylesheets[all][] = css/style_overrides.css


;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'assets/plugins/modernizr.min.js'
scripts[] = 'assets/plugins/bootstrap/js/bootstrap.min.js'
scripts[] = 'assets/js/scripts.js'

;scripts[] = 'bootstrap/js/affix.js'
;scripts[] = 'bootstrap/js/alert.js'
;scripts[] = 'bootstrap/js/button.js'
;scripts[] = 'bootstrap/js/carousel.js'
;scripts[] = 'bootstrap/js/collapse.js'
;scripts[] = 'bootstrap/js/dropdown.js'
;scripts[] = 'bootstrap/js/modal.js'
;scripts[] = 'bootstrap/js/tooltip.js'
;scripts[] = 'bootstrap/js/popover.js'
;scripts[] = 'bootstrap/js/scrollspy.js'
;scripts[] = 'bootstrap/js/tab.js'
;scripts[] = 'bootstrap/js/transition.js'

; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''